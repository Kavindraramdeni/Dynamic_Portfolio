{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Backend server for the portfolio application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec \"node --loader ts-node/esm\" src/server.ts",
    "seed": "ts-node --esm src/scripts/seed.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
